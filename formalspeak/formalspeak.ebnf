sentence =
  clause
| clause CC sentence
| clause COMMA sentence
| clause COMMA RB sentence
| clause RB sentence;

clause =
  noun_phrase VB
| noun_phrase VB noun_phrase
| noun_phrase VB adjective_phrase
| noun_phrase VB noun_phrase noun_phrase
| noun_phrase VB noun_phrase adjective_phrase;

noun_phrase =
  NN;

adjective_phrase =
  JJ;

